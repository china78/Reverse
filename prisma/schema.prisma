// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             String        @id @default(uuid()) @db.VarChar(100)
  username       String        @unique
  password       String
  owner          String        @db.VarChar(100) @default("")
  type           String?       @db.VarChar(100)
  displayName    String?       @db.VarChar(100)
  passwordType   String?       @db.VarChar(100)
  avatar         String?       @db.VarChar(500)
  avatarType     String?       @db.VarChar(100)
  email          String?       @db.VarChar(100)
  phone          String?       @db.VarChar(20) 
  tag            String?       @db.VarChar(100)
  score          Int?          @default(0)
  createdIp      String?       @db.VarChar(100)
  gitHub         String?       @db.VarChar(100)
  google         String?       @db.VarChar(100)
  qq             String?       @db.VarChar(100)
  weChat         String?       @db.VarChar(100)
  facebook       String?       @db.VarChar(100)
  dingTalk       String?       @db.VarChar(100)
  weibo          String?       @db.VarChar(100)
  baidu          String?       @db.VarChar(100)
  alipay         String?       @db.VarChar(100)
  createdAt      String?       @db.VarChar(100)
  updatedAt      String?       @db.VarChar(100)
  usages         Int           @default(0)
  isMember       Boolean       @default(false)
  subscription   Subscription? @relation(fields: [subscriptionId], references: [id])
  subscriptionId Int?
}

model Subscription {
  id          Int      @id @default(autoincrement())
  type        String   // 套餐类型：月卡、季卡、年卡、终身
  price       Float    // 套餐价格
  users       User[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
